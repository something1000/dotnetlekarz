
@{
    ViewData["Title"] = "Wizyty";
}

<h1>Przenieś wizyte</h1>

<p>@Model.Doctor.Login</p>
<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <form>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-3 col-form-label">Lekarz</label>
                    <input type="email" class="form-control col-9" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Doctor.Surname @Model.Doctor.Name" disabled>
                    <small id="emailHelp" class="col-12 form-text text-muted text-center">You can't change your doctor</small>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail1" class="col-sm-3 col-form-label">Wybierz dzień</label>
                    <input type="date" id="start" name="trip-start"
                           value="@Model.DateTime.ToString("yyyy-MM-dd")"
                           min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>